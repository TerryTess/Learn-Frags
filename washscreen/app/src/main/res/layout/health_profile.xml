<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/baige"
        tools:context=".HealthProfileActivity"
        android:layout_margin="10dp"
        >
        <ImageView
            android:id="@+id/logo"
            android:src="@drawable/logo"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            />
        <EditText
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:background="@color/white"
            android:text="Household Health Profile"
            android:textColor="@color/maroon"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"/>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:progressDrawable="@drawable/progress_bar"
            android:layout_marginTop="10dp"
            android:max="50"
            android:progress="50"
            android:layout_below="@+id/profile"/>
        <TextView
            android:id="@+id/textViewo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prevention and Health Practices"
            android:textStyle="bold"
            android:textColor="@color/maroon"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/progressBar"/>
        <TextView
            android:id="@+id/textVieww1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewo"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="What preventive measures does your household take to reduce the risk of illness?"/>

        <RelativeLayout
            android:id="@+id/relativve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textVieww1"
            android:layout_marginTop="10dp"
            android:background="@drawable/textfield_border">

            <EditText
                android:id="@+id/edittexttt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preventive Measures"
                android:textColor="@color/grey"
                android:padding="5dp"
                android:background="@android:color/transparent"
                android:layout_toStartOf="@id/checkBox"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"/>

            <!-- CheckBox -->
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp" />
        </RelativeLayout>
<TextView
    android:id="@+id/texttview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/relativve"
    android:layout_marginTop="10dp"
    android:textSize="15dp"
    android:textStyle="bold"
    android:text="Are there any barriers to accessing healthcare services for illnesses within your household? If yes, please specify"
/>
    <LinearLayout
        android:id="@+id/lineear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/texttview">

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geographical"
            android:textColor="@color/maroon"/>

        <CheckBox
            android:id="@+id/checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Financial"
            android:textColor="@color/maroon"
            android:layout_marginStart="30dp"/>

        <CheckBox
            android:id="@+id/checkbox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Financial"
            android:textColor="@color/maroon"
            android:layout_marginStart="30dp"/>

    </LinearLayout>
<TextView
    android:id="@+id/textviiiew"
    android:layout_below="@+id/lineear"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Child Health Status"
    android:textColor="@color/maroon"
    android:textStyle="bold"
    android:textSize="20dp"
    android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textvieww"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviiiew"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Kindly proceed to fill the health status for household children below 5 years of age"/>
    <EditText
        android:id="@+id/editttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textvieww"
        android:text="CHILD HEALTH STATUS"
        android:textColor="@color/maroon"
        android:textStyle="bold"
        android:layout_marginStart="180dp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editttext"
        android:backgroundTint="@color/maroon"
        android:text="Next"
        android:textSize="10dp"
        android:textColor="@color/white"
        android:layout_marginTop="110dp"
        android:layout_centerInParent="true"
       />








</RelativeLayout>


